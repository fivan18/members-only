<%= form_for @user do |f| %>
  <%= f.label :name, "name:" %>
  <%= f.text_field :name %>
  <%= f.label :email, "email:" %>
  <%= f.email_field :email %>
  <%= f.label :password, "password:" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "password_confirmation:" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<% end %>