<% if logged_in? %>
  <%= link_to  "Create a new post", new_post_path %>
  <%else%>
  <%= link_to  "Login to create a new post", signin_path %>
<% end %>

<h1>All Posts</h1>
<%@posts.each do |p|%>
<p>Titile: <%= p.body%></p>
<p>Body: <%= p.body%></p><br>
<% if logged_in? %>
<p>Created by: <%= p.user.name%></p><br>
<%else%>
  <%= link_to  "Login to See the post author", signin_path %> <br>
<% end %>
____________________
<%end%>



